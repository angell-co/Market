@tailwind base;

/**
 * AlpineJS cloak style
 */
[x-cloak] {
  display: none;
}

@tailwind components;
@tailwind utilities;

/**
 * HTMX loading indicator
 */
.htmx-indicator {
  display: none;
}
.htmx-request .htmx-indicator,
.htmx-request.htmx-indicator {
  display: inline-block;
}

/**
 * Disable the spinner on assets index components when the parent field is updating
 */
.htmx-request.field-assets .field-assets-index .htmx-indicator{
  display: none;
}
